<p class="text-green-500 font-semibold mb-4"><%= notice %></p>

<h1 class="text-3xl font-bold mb-6">Rooms</h1>

<div id="rooms" class="space-y-4">
  <% @rooms.each do |room| %>
    <div class="border p-4 rounded-lg shadow-sm bg-white">
      <%= render room %>
      <p class="mt-2">
        <%= link_to "Show this room", room, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New room", new_room_path, class: "inline-block mt-6 px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
